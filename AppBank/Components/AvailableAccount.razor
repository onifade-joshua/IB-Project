@page "/availableaccount"
@using AppBank.Models
@using AppBank.Interfaces
@inject ICoreAccountService CoreAccountService

<div class="container" style="font-size:14px;">
    <div class="row">
        <div class="col-md-6">
            <h6>Available Accounts</h6>
            <div style="max-height: 300px; overflow-y: auto;">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" @onclick="ToggleSelectAll" /></th>
                            <th>Account No</th>
                            <th>Account Name</th>
                            <th>Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in AvailableUsers)
                        {
                            <tr>
                                <td><input type="checkbox" @bind="account.Selected" /></td>
                                <td>@account.AccountNo</td>
                                <td>@account.AccountName</td>
                                <td>@account.Currency</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <button type="button" class="btn btn-block text-nowrap btnn" style="color: #5f615f; width: 100px;" @onclick="MoveAccounts">
                    Add
                </button>
            </div>
        </div>

        <div class="col-md-6">
            <h6>Selected Accounts</h6>
            <div style="max-height: 300px; overflow-y: auto;">
                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th><input type="checkbox" @onclick="ToggleSelectAllSelected" /></th>
                            <th>Account No</th>
                            <th>Account Name</th>
                            <th>Currency</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in SelectedAccounts)
                        {
                            <tr>
                                <td><input type="checkbox" @bind="account.Selected" /></td>
                                <td>@account.AccountNo</td>
                                <td>@account.AccountName</td>
                                <td>@account.Currency</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-end mt-3">
                <button type="button" class="btn btn-block text-nowrap btnn" style="color: #5f615f; width: 100px;" @onclick="DeleteAccounts">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>
