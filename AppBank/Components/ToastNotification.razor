@using AppBank.Interfaces
@inject NavigationManager NavigationManager
@inject IAlertManager AlertManager


<div class="toast-container p-3">
    <div class="toast @showClass" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <strong class="me-auto">@headerText</strong>
            <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
        </div>
        <div class="toast-body">
            @bodyText
            <button class="btn btn-primary btn-go-home" @onclick="GoHome">Dashboard</button>
        </div>
    </div>
</div>

<style>
    .toast-container {
        position: fixed;
        top: 30%;
        left: 55%;
        transform: translate(-50%, -50%);
        z-index: 1050;
    }

    .toast {
        min-height: 150px;
        width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 16px;
        background-color: @toastColor;
    }

    .toast-body {
        text-align: center;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .btn-go-home {
        margin-top: 10px;
        color: #fff;
    }

    .btn-go-home {
        background-color: #4B70F5;
    }
</style>