@using AppBank.Models;


@if (Steps != null && Steps.Any())
{
    <div class="container" style="width:100%; height:70vh; padding:0; margin:0; box-sizing: border-box;">
        <div class="row">
            <div class="col-md-2">
                <ul class="nav flex-column mt-3">
                    @foreach (var step in Steps)
                    {
                        <li class="nav-item side-link">
                            <small class="form-text text-muted @(ActiveIndex >= step.Index ? "active" : "")" style="font-size:14px;">Step @step.Index</small><br />
                            <span style="font-size:14px;">@step.Title</span>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-10 main" style="width:100%; height:85vh; margin:0.3rem; padding:0.3rem;">
                @if (CurrentStep.ShowTitleInContent)
                {
                    <h5 class="mt-2 main1" style="margin-left: 10px;">@CurrentStep.Title</h5>
                }
                <div style="font-size:14px;"> @CurrentStep.Content </div>
                @if (CurrentStep.Index != 5)
                {
                    <div class="d-flex" style="justify-content:flex-end; margin-top: 3.5rem;">
                        <button type="button" class="btn btn-primary btn1" @onclick="Previous" id="prev" disabled="@prevDisabled" style="margin-right:10px; color:#fff;">Previous</button>
                        <button type="button" class="btn btn-primary btn2" @onclick="Next" id="next" disabled="@nextDisabled" style="margin-left:10px;color: #fff;">Proceed</button>
                    </div>
                }
            </div>
        </div>
    </div>
}

